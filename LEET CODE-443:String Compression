class Solution {
    public int compress(char[] chars) {
        int idx = 0; 
        int n = chars.length;

        for (int i = 0; i < n; ) {
            char ch = chars[i];
            int count = 0;

            // count how many times chars[i] repeats
            while (i < n && chars[i] == ch) {
                count++;
                i++;
            }

            // write the character
            chars[idx++] = ch;

            // if count > 1, write its digits
            if (count > 1) {
                String str = String.valueOf(count);
                for (char dig : str.toCharArray()) {
                    chars[idx++] = dig;
                }
            }
        }

        return idx; // compressed length
    }
}
